<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.fa_blog_study.dao.TagMapper">
    <select id="getTagsByTagIds" resultType="com.example.fa_blog_study.vo.TagVo">
        SELECT * FROM ms_tag WHERE
        <choose>
            <when test="articleId != null and articleId.size > 0">
                id IN
                <foreach collection="articleId" open="(" close=")" separator="," item="id">
                    #{id}
                </foreach>
            </when>
            <otherwise>
                1=0
            </otherwise>
        </choose>
    </select>
</mapper>